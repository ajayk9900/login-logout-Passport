<%- include('header')%>


    <!-- HEADER DESKTOP-->

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <strong>Edit Admin</strong> Records
                            </div>
                            <div class="card-body card-block">
                                <form action="/admin/editAdminRecord" method="post" enctype="multipart/form-data" class="form-horizontal">
                                    <input type="hidden" name="editId" value="<%=adminData._id%>" style="border: 1px solid black;" >
                                    <!-- First Name -->
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" class=" form-control-label">First Name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" value="<%=adminData.name %>" name="fname"
                                                placeholder="Enter first Name" class="form-control">
                                        </div>
                                    </div>
                                    <!-- Last Name -->
                                    <!-- <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="text-input" value="<%=adminData.name %>" class=" form-control-label">Last Name</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="text" id="text-input" name="lname"
                                                placeholder="Enter Last Name" class="form-control">
                                        </div>
                                    </div> -->
                                    <!-- Email Address-->
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label for="email-input" class=" form-control-label">Enter Email</label>
                                        </div>
                                        <div class="col-12 col-md-9">
                                            <input type="email" id="email-input" value="<%=adminData.email %>" name="email" placeholder="Enter Email"
                                                class="form-control">
                                        </div>
                                    </div>
                                    <!-- Select Gender-->
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Gender</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                <label for="inline-radio1" class="form-check-label ">
                                                    <input type="radio" id="inline-radio1" name="gender" value="male"
                                                        class="form-check-input" <% if(adminData.gender=='male'){%><%= 'checked' %> <% }%> >Male
                                                </label>
                                                <label for="inline-radio2" class="form-check-label ">
                                                    <input type="radio" id="inline-radio2" name="gender" value="female"
                                                        class="form-check-input" <% if(adminData.gender=='female'){%><%= 'checked' %> <% }%> >Female
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Select hobby-->
                                    <div class="row form-group">
                                        <div class="col col-md-3">
                                            <label class=" form-control-label">Hobby</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                <label for="inline-checkbox1" class="form-check-label ">
                                                    <input type="checkbox" id="inline-checkbox1" name="hobby"
                                                        value="riding" class="form-check-input" <% if(adminData.hobby.includes('riding')){%><%= 'checked' %> <% }%> >Riding
                                                </label>
                                                <label for="inline-checkbox2" class="form-check-label ">
                                                    <input type="checkbox" id="inline-checkbox2" name="hobby"
                                                        value="cycling" class="form-check-input" <% if(adminData.hobby.includes('cycling')){%><%= 'checked' %> <% }%> >Cycling
                                                </label>
                                                <label for="inline-checkbox3" class="form-check-label ">
                                                    <input type="checkbox" id="inline-checkbox3" name="hobby"
                                                        value="dancing" class="form-check-input" <% if(adminData.hobby.includes('dancing')){%><%= 'checked' %> <% }%> >Dancing
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Select City-->
                                    <% var city=["Surat", "Navsari" , "Rajkot" , "Kaccha" , "Ahmedabad" ] %>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="select" class=" form-control-label">Select City</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <select name="city" id="select" class="form-control">
                                                    <option value="0">---Select City---</option>
                                                    <%city.map((v)=>{%>
                                                        <option value="<%= v%>" <% if(v==adminData.city){ %> <%= 'selected' %> <%}%> ><%= v%></option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>
                                        <!-- Description-->
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="textarea-input"
                                                    class=" form-control-label">Description</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <textarea name="description" id="textarea" rows="3"
                                                    placeholder="Content..." class="form-control"><%= adminData.description %></textarea>
                                            </div>
                                        </div>
                                        <!-- Image-->
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="file-input" class=" form-control-label">File</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="file" id="file-input" name="adminImage"
                                                    class="form-control-file">
                                                <img src="<%= adminData.adminImage %>" height="100">
                                            </div>
                                        </div>
                                        <!-- <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-multiple-input" class=" form-control-label">Multiple File input</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-multiple-input" name="file-multiple-input" multiple="" class="form-control-file">
                                                </div>
                                            </div> -->

                            </div>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fa fa-dot-circle-o"></i> Edit 
                                    </button>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>


                <%- include('footer')%>